/* 页头 */

.heeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx;
  padding: 0 25rpx;
}

.heeader view {
  background-color: #2c2c2c;
  color: white;
  border-radius: 50rpx;
  vertical-align: center;
}

.location {
  padding: 10rpx;
  font-size: 25rpx;
  font-weight: bold;
}

.search {
  padding: 5rpx;
  width: 70%;
  background-color: white;
  align-items: center;
  display: flex;
  font-size: 25rpx;
  font-weight: bold;
}

.search input {
  width: 100%;
}

/* 轮播图 */

.swiperList image {
  width: 100%;
  height: 100%;
}

/* 分类 */

.typeList {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  border: 3rpx solid #2c2c2c;
  opacity: 0.9;
  box-shadow: 3rpx 3rpx 5rpx #2c2c2c;
}

.typeList image {
  margin: 30rpx 50rpx 10rpx 50rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 商品列表 */

.commodityList {
  /* border: 1px solid blue; */
}

/* 单个商品 */

.commodity {
  display: flex;
  border: 5rpx solid #dbdbdb;
  opacity: 0.9;
  box-shadow: 3rpx 3rpx 5rpx #dbdbdb;
  border-radius: 10rpx;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 30rpx;
  padding: 30rpx;
  background-color: white;
  /* color: #99999e; */
}

.commodity:active {
  background-color: #dbdbdb;
}

/* 商品封面 */

.cover {
  display: flex;
}

.coverImage {
  width: 150rpx;
  height: 150rpx;
  /* border: 1px solid green; */
  margin: auto 0;
}

/* 商品详细信息 */

.commodityInfo {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-left: 30rpx;
  /* border: 1px solid green; */
}

.leftColumn {
  flex: 1.5;
}

.rightColumn {
  flex: 1;
}

/* 具体名称、价格、日期、类型 */

.commodityName, .commodityPrice, .commodityDate, .commodityType {
  display: flex;
  align-items: center;
  margin: 50rpx 0;
  font-size: 30rpx;
}
